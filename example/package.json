{
  "name": "eventmonkey_example",
  "version": "0.0.1",
  "description": "Example server for eventMonkey",
  "main": "dist/server.js",
  "repository": {
    "url": "https://github.com/DameonL/eventMonkey.git"
  },
  "author": "Dameon Laird",
  "license": "Creative Commons Zero v1.0 Universal",
  "scripts": {
    "build": "tsc && copy-files-from-to",
    "build-clean": "rimraf ./dist && npm run build",
    "start": "pm2 start dist/eventMonkeyFrontend.js && pm2 start dist/eventMonkeyBot.js --log monkeyBotLog.txt",
    "stop": "pm2 delete dist/eventMonkeyBot.js && pm2 delete dist/eventMonkeyFrontend.js",
    "dev": "nodemon -e ts,js,json --delay 1 --watch src --watch ../dist --exec \"npm run build && npm run start\""
  },
  "dependencies": {
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "eventmonkey": "file:../dist",
    "express": "^4.18.2",
    "pm2": "^5.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "copy-files-from-to": "^3.8.0",
    "nodemon": "^2.0.21",
    "rimraf": "^4.1.3"
  },
  "copyFilesSettings": {
    "whenFileExists": "overwrite"
  },
  "copyFiles": [
    {
      "from": "package.dist.json",
      "to": "dist/package.json"
    },
    {
      "from": ".env",
      "to": "dist/.env"
    }
  ]
}
